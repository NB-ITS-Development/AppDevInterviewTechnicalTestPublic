@using AppDevInterviewTechnicalTest.Models
@model HomeIndexModel
@{
    ViewBag.Title = "Open Tickets";
}
<p>
    @Html.ActionLink("Create New Ticket", "Create", new { }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().DateTimeCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().DateTimeModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().ModifiedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets.FirstOrDefault().Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Tickets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
